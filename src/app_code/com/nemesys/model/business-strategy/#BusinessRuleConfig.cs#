using System;
using System.Text;

namespace com.nemesys.model
{
	public class BusinessRuleConfig
	{	
		private int _id;
		private int _ruleId;
		private int _productId;
		private int _productRefId;
		private decimal _rateFrom;
		private decimal _rateTo;
		private decimal _rateRefFrom;
		private decimal _rateRefTo;
		private int _operation;
		private int _applyTo;
		private int _applyToQuantity;
		private decimal _value;	
		
		
		public BusinessRuleConfig(){}

		public virtual int id {
			get { return _id; }
			set { _id = value; }
		}
		
		public virtual int ruleId {
			get { return _ruleId; }
			set { _ruleId = value; }
		}

		public virtual int productId {
			get { return _productId; }
			set { _productId = value; }
		}

		public virtual int productRefId {
			get { return _productRefId; }
			set { _productRefId = value; }
		}

		public virtual decimal rateFrom {
			get { return _rateFrom; }
			set { _rateFrom = value; }
		}

		public virtual decimal rateTo {
			get { return _rateTo; }
			set { _rateTo = value; }
		}

		public virtual decimal rateRefFrom {
			get { return _rateRefFrom; }
			set { _rateRefFrom = value; }
		}

		public virtual decimal rateRefTo {
			get { return _rateRefTo; }
			set { _rateRefTo = value; }
		}

		public virtual int operation {
			get { return _operation; }
			set { _operation = value; }
		}

		public virtual int applyTo {
			get { return _applyTo; }
			set { _applyTo = value; }
		}

		public virtual int applyToQuantity {
			get { return _applyToQuantity; }
			set { _applyToQuantity = value; }
		}

		public virtual decimal value {
			get { return _value; }
			set { _value = value; }
		}		
		
		public virtual string ToString() {
			StringBuilder builder = new StringBuilder("BusinessRuleConfig: ")
			.Append(" - id: ").Append(this._id)
			.Append(" - ruleId: ").Append(this._ruleId)
			.Append(" - productId: ").Append(this._productId)
			.Append(" - productRefId: ").Append(this._productRefId)
			.Append(" - rateFrom: ").Append(this._rateFrom)
			.Append(" - rateTo: ").Append(this._rateTo)
			.Append(" - rateRefFrom: ").Append(this._rateRefFrom)
			.Append(" - rateRefTo: ").Append(this._rateRefTo)
			.Append(" - operation: ").Append(this._operation)
			.Append(" - applyTo: ").Append(this._applyTo)
			.Append(" - applyToQuantity: ").Append(this._applyToQuantity)
			.Append(" - value: ").Append(this._value);
			
			return builder.ToString();			
		}
	}
}