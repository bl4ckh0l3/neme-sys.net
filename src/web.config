		<logger name="NHibernate">
			<level value="WARN" />
			<appender-ref ref="nhRollingFile" />
		</logger>

		<logger name="NHibernate.SQL">
			<level value="DEBUG" />
			<appender-ref ref="nhRollingFile" />
		</logger>

		<logger name="com.nemesys">
			<level value="WARN" />
			<appender-ref ref="rollingFile" />
		</logger>

